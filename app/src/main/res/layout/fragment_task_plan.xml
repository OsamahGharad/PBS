<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFAFA"
    >



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="100">

<!--        <ImageView-->
<!--            android:id="@+id/task_plan_img"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:scaleType="fitXY"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:src="@drawable/welcome"-->
<!--           android:layout_weight="50"-->
<!--            />-->




        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"


            >

            <LinearLayout
                android:id="@+id/taskLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"

               >

                <TextView
                    android:id="@+id/taskN"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:fontFamily="@font/droid"
                    android:textSize="14sp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#3F51B5"/>
                <TextView
                    android:id="@+id/task_start_date"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:textSize="14sp"
                    android:textColor="#383838"/>
                <TextView

                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:fontFamily="@font/droid"
                    android:textSize="14sp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginStart="15dp"
                    android:textColor="#3F51B5"/>
                <TextView
                    android:id="@+id/task_end_date"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:textSize="14sp"
                    android:textColor="#383838"/>

            </LinearLayout>

            <LinearLayout
               android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/target_sale"
                    android:fontFamily="@font/droid"
                    android:textSize="14sp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textColor="#3F51B5"/>
                <TextView
                    android:id="@+id/task_sales_target"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:textSize="14sp"
                    android:textColor="#383838"/>
                <TextView

                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/area"
                    android:fontFamily="@font/droid"
                    android:textSize="14sp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginStart="15dp"
                    android:textColor="#3F51B5"/>
                <TextView
                    android:id="@+id/task_area"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droid"
                    android:textSize="14sp"
                    android:textColor="#383838"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_alignParentBottom="true"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/taskPlan"
                android:fontFamily="@font/droid"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textColor="#3F51B5"
                android:layout_marginBottom="20dp"/>

            <fragment
                android:id="@+id/task_plan_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/welcome"
                android:layout_marginBottom="10dp"
                class="com.google.android.gms.maps.SupportMapFragment"
                />

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView

            android:layout_alignParentBottom="true"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            >

               <ImageView
                   android:id="@+id/task_image"
                   android:layout_width="match_parent"
                   android:layout_height="300dp"
                   android:scaleType="fitXY"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="7dp"
                   android:layout_marginEnd="7dp"
                   android:layout_marginBottom="10dp"
                   android:src="@drawable/welcome"

                      />

                    </androidx.cardview.widget.CardView>

      </androidx.appcompat.widget.LinearLayoutCompat>
  </LinearLayout>